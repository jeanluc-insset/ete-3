<?xml version="1.0" encoding="UTF-8"?>


<mda>

    <!--
        A project is a set of pipelines, each pipeline is made of "steps".
        Each step receives a model and returns a model.
        Some steps accept null as the entry model, for example, steps reading
        a model.
        Some steps return the model they receive but produce some board effects,
        for example "dump" steps, "template" steps or "register" steps.
      -->

    <transformation-set >
        <model  url="Gel.xml"/>

        <transformation-set output_base="../../">
             reads a model 

             API and default implementation generation 
            <module src="../../../../../../src/main/mda/modules/java/ete-config.xml"
                    dialect="fr.insset.jeanluc.el.dialect.BasicJavaDialect"
                    projectName="gel"/>
        </transformation-set>

        <transformation-set output_base="../../gel-impl/src/main/java">
             Implementation of specific features 
            <velocity template="modules/gel-impl/java/tree-builder.vm"
                    dialect="fr.insset.jeanluc.el.dialect.BasicJavaDialect"
                    target="fr/insset/jeanluc/ete/gel/impl/TreeBuilder.java"/>
            <velocity template="modules/gel-impl/java/parser-wrapper.vm"
                    dialect="fr.insset.jeanluc.el.dialect.BasicJavaDialect"
                    target="fr/insset/jeanluc/ete/gel/impl/GelParserFactory.java"/>
            <velocity template="modules/gel-impl/java/gel-factory.vm"
                    dialect="fr.insset.jeanluc.el.dialect.BasicJavaDialect"
                    target="fr/insset/jeanluc/ete/gel/impl/factory/GelFactory.java"/>
        </transformation-set>


             and some tests... 
<!--        <transformation-set output_base="../../gel-impl/src/test/java/">
            <velocity template="modules/gel-impl-test/test.vm"
                    target="fr/insset/jeanluc/ete/gel/impl/GelTest.java"/>
            <velocity template="modules/gel-impl-test/evaluator.vm"
                    dialect="fr.insset.jeanluc.el.dialect.BasicJavaDialect"
                    target="fr/insset/jeanluc/gel/impl/GelEvaluator.java"/>
        </transformation-set>-->

    </transformation-set>

</mda>



