<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>fr.insset.jeanluc</groupId>
        <artifactId>xlang</artifactId>
        <version>3.1</version>
    </parent>
    <artifactId>xlang-builder</artifactId>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>xlang-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>fr.insset.jeanluc</groupId>
            <artifactId>meta-model-io</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>fr.insset.jeanluc</groupId>
            <artifactId>xmi-io</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>fr.insset.jeanluc</groupId>
            <artifactId>gel-impl</artifactId>
            <version>3.1</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>fr.insset.jeanluc</groupId>
            <artifactId>xlang-impl</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>fr.insset.jeanluc</groupId>
            <artifactId>ete-lib-impl</artifactId>
            <version>3.1</version>
            <scope>test</scope>
            <type>jar</type>
        </dependency>
    </dependencies>

    <name>xlang-builder</name>

    <build>
        <resources>
            <resource>
                <directory>target/generated-resources/ete/</directory>
            </resource>
        </resources>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/ete</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>fr.insset.jeanluc</groupId>
                <artifactId>ete-maven-plugin</artifactId>
                <version>3.1</version>
                <dependencies>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>util</artifactId>
                        <version>1.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>meta-model-api</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>meta-model-impl</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>ete-lib-api</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>ete-lib-impl</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>el-evaluator</artifactId>
                        <version>3.1</version>
                    </dependency>                    
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>gel-api</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>gel-impl</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>xlang-api</artifactId>
                        <version>3.1</version>
                    </dependency>
                    <dependency>
                        <groupId>fr.insset.jeanluc</groupId>
                        <artifactId>xlang-impl</artifactId>
                        <version>3.1</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>ete</id>
                        <goals>
                            <goal>ete</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>


</project>