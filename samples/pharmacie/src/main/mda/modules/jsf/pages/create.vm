<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:ete="http://xmlns.jcp.org/jsf/composite/ete"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="\#{bundle.Create${current.name}Title}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:panelGroup id="messagePanel" layout="block">
                <h:messages errorStyle="color: red" infoStyle="color: green" layout="table"/>
            </h:panelGroup>
            <h:form>
                <ete:${current.name}_form
                           selection="\#{${dialect.i2lc($current.name)}Controller.selected}"
/>
                <br />
                <h:commandLink action="\#{${dialect.i2lc($current.name)}Controller.create}" value="\#{bundle.Create${current.name}SaveLink}" />
                <br />
                <br />
                <h:commandLink action="\#{${dialect.i2lc($current.name)}Controller.prepareList}" value="\#{bundle.Create${current.name}ShowAllLink}" immediate="true"/>
                <br />
                <br />
                <h:link outcome="/index" value="\#{bundle.Create${current.name}IndexLink}"/>
            </h:form>
        </ui:define>
    </ui:composition>

</html>
