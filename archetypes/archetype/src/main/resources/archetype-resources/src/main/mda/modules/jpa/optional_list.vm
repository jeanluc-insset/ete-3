package fr.upjv.mis.ete.util;

import java.util.LinkedList;
import java.util.List;

/**
 * An OptionalList encapsulates a standard list but it can be declared as
 * "present" or not.<br>
 * We get an OptionalList (actually, a an instance of a subclass of OptionalList)
 * when we query a list property of an optional object generated by ETE.<br>
 * If the object is not present, we get an empty OptionalList which is not
 * present.<br>
 * If the object is present, we get an empty OptionalList which in turn is present.
 *
 * @author jldeleage
 */
public class OptionalList<T> {

    public List<T> get() {
        return delegate;
    }



    public boolean isPresent() {
        return present;
    }

    public void setPresent(boolean present) {
        this.present = present;
    }


    public void add(T t) {
        if (isPresent()) {
            delegate.add(t);
        }
    }

    private     List<T>     delegate = new LinkedList<>();
    private     boolean     present;

}       // OptionalList
